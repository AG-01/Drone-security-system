<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvRequestTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Request Title"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRequestTitle"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_baseline_format_align_right_24"
                android:drawableLeft="@drawable/ic_name"
                android:drawableTint="@color/purple_700"
                android:text="User Name"

                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvRequestDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRequestDetails"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_baseline_format_align_right_24"
                android:drawableLeft="@drawable/ic_name"
                android:drawableTint="@color/purple_700"

                android:text="Request Date"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvRequestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUserName"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_baseline_format_align_right_24"
                android:drawableLeft="@drawable/ic_name"
                android:drawableTint="@color/purple_700"
                android:text="Request Type"

                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRequestDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRequestType"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_baseline_format_align_right_24"
                android:drawableLeft="@drawable/ic_name"
                android:drawableTint="@color/purple_700"
                android:text="Request Details"

                android:textColor="@android:color/black"
                android:textSize="14sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
